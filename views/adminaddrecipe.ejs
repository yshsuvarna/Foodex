<%- include("partials/adminheader"); -%>
<!-- Content -->
<h1>Food Category</h1>
<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">
        <!-- Makes POST request to /register route -->
        <form method="POST" action="/admin/addrecipe">
          <div class="form-group">
            <label>Recipe Category</label>
            <select name="recipeCategory" class="form-control">
              <% categoryArray.forEach((category) => { %>
                <option><%=category%></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label>Recipe Name</label>
            <input type="text" class="form-control" name="recipeName">
          </div>
          <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="recipeDescription">
          </div>
          <div class="form-group">
            <label>Image Url</label>
            <input type="text" class="form-control" name="recipeImage">
          </div>
          <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" name="recipePrice">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("partials/adminfooter"); -%>
