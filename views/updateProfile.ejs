<%- include("partials/headerLogin"); -%>

<div class="container mt-5">
  <h1>Update Profile</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form action="/updateProfile" method="POST">
            <div class="form-group">
              <label for="Fname">First Name</label>
              <input
                type="text"
                class="form-control"
                value="<%=profile.curUserFname%>"
                name="FirstName"
              />
            </div>
            <div class="form-group">
              <label for="Lname">Last Name</label>
              <input
                type="text"
                class="form-control"
                value="<%=profile.curUserLname%>"
                name="LastName"
              />
            </div>
            <div class="form-group">
              <label for="Phno">Phone Number</label>
              <input
                type="text"
                class="form-control"
                value="<%=profile.curUserPhone%>"
                readonly
                name="PhoneNum"
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control"
                value="<%=profile.curUserEmail%>"
                readonly
                name="Email"
              />
            </div>
            <div class="form-group">
              <label for="Address">Address</label>
              <input
                type="text"
                class="form-control"
                value="<%=profile.curUserAddr%>"
                name="Address"
              />
            </div>
            <button type="submit" class="btn btn-dark">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footerLogin"); -%>
